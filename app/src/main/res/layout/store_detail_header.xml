<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/store_detail_header"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <com.flaviofaria.kenburnsview.KenBurnsView
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/store_background"
            android:src="@drawable/contoh_background"
            android:layout_height="166dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="102dp"
        android:paddingRight="17dp"
        android:paddingLeft="17dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
            <com.dd.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sl_shadowRadius="3dp"
                app:sl_shadowColor="#3F000000"
                app:sl_dx="0dp"
                app:sl_dy="6dp"
                app:sl_cornerRadius="100dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/store_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/trias"
                app:civ_border_width="1dp"
                app:civ_border_color="#FFF"/>
            </com.dd.ShadowLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="26dp"
            android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="J.Co Indonesia"
                    android:id="@+id/store_name"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/textWhite"
                    android:textSize="23dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/store_city"
                    android:text="Samarinda"
                    android:textColor="@color/textDark"
                    android:textSize="16dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:textSize="13dp"
                    android:textColor="@color/textDark"
                    android:id="@+id/store_address"
                    android:text="Big Mall Samarinda Lantai 2"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/store_operation"
                    android:text="09.00 - 21.00"
                    android:textColor="@color/textDark"
                    android:textSize="13dp"
                    android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>