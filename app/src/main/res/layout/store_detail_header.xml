<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <ImageView
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/contoh_background"
            android:layout_height="186dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="122dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.gigamole.library.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:sl_shadowed="true"
            app:sl_shadow_angle="90"
            app:sl_shadow_radius="3dp"
            app:sl_shadow_distance="3dp"
            app:sl_shadow_color="#000">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/trias"
                app:civ_border_width="1dp"
                app:civ_border_color="#FFF"/>
        </com.gigamole.library.ShadowLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="J.Co Indonesia"
                    android:id="@+id/store_name"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/textWhite"
                    android:textSize="23dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/store_city"
                    android:text="Samarinda"
                    android:textColor="@color/textDark"
                    android:textSize="16dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:textSize="13dp"
                    android:textColor="@color/textDark"
                    android:id="@+id/store_address"
                    android:text="Big Mall Samarinda Lantai 2"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/store_operation"
                    android:text="09.00 - 21.00"
                    android:textColor="@color/textDark"
                    android:textSize="13dp"
                    android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>